# =============================================================================
# Reppy Worker Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Google/Gemini
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your-google-api-key-here

# Model for routing/planning (fast, cheap)
GEMINI_MODEL_ROUTER=gemini-2.0-flash

# Model for main generation (powerful)
GEMINI_MODEL_MAIN=gemini-2.5-pro-preview-06-05

# -----------------------------------------------------------------------------
# Prompts
# -----------------------------------------------------------------------------
PROMPTS_DIR=./prompts

# -----------------------------------------------------------------------------
# VM Internal API
# -----------------------------------------------------------------------------
# Base URL for VM internal API (private IP)
VM_INTERNAL_BASE_URL=http://10.0.0.10:8080/internal

# Bearer token for authentication
VM_INTERNAL_TOKEN=your-internal-api-token

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333

# Optional API key
QDRANT_API_KEY=

# Collection name for user memory
QDRANT_COLLECTION_MEMORY=user_memory

# -----------------------------------------------------------------------------
# OCI Configuration
# -----------------------------------------------------------------------------
# OCI Streaming stream OCID for token streaming
OCI_STREAM_ID=ocid1.stream.oc1.region.xxx

# OCI Queue OCID for result publishing
OCI_RESULT_QUEUE_ID=ocid1.queue.oc1.region.xxx

# OCI config profile (for local development)
OCI_CONFIG_PROFILE=DEFAULT

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Timeouts
# -----------------------------------------------------------------------------
HTTP_TIMEOUT_SECONDS=30.0
LLM_TIMEOUT_SECONDS=120.0

